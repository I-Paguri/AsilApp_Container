<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_relative_layout"
    app:circularflow_radiusInDP="30dp"
    android:padding="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    >

    <TextView
        android:id="@+id/title_app"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR Code Authentication"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/welcome"
        style="@style/SubtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puoi scansionare il QR Code per accedere al sistema, tramite AsilApp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title_app"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/qrCode"
        android:layout_below="@+id/welcome"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/generaQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qrCode"
        android:layout_centerInParent="true"
        android:text="Genera QR"></Button>


</RelativeLayout>